{
  "name": "@maidcoin/contracts",
  "description": "MaidCoin",
  "keywords": [
    "maidcoin",
    "defi",
    "nft"
  ],
  "scripts": {
    "build": "hardhat compile",
    "console": "hardhat console",
    "deploy:hardhat": "hardhat --network hardhat deploy",
    "deploy:mainnet": "hardhat --network mainnet deploy",
    "deploy:ropsten": "hardhat --network ropsten deploy",
    "deploy:kovan": "hardhat --network kovan deploy",
    "verify:mainnet": "hardhat --network mainnet etherscan-verify",
    "verify:ropsten": "hardhat --network ropsten etherscan-verify",
    "verify:kovan": "hardhat --network kovan etherscan-verify",
    "test": "cross-env TS_NODE_TRANSPILE_ONLY=1 hardhat --network hardhat test",
    "test:raid": "cross-env TS_NODE_TRANSPILE_ONLY=1 hardhat --network hardhat test ./test/NurseRaid.test.ts",
    "test:gas": "cross-env REPORT_GAS=true yarn test",
    "prepare": "hardhat compile"
  },
  "homepage": "https://github.com/maidcoingit/maidcoin",
  "bugs": {
    "url": "https://github.com/maidcoingit/maidcoin/issues",
    "email": "contact@maidcion.org"
  },
  "license": "MIT",
  "author": "Dr. Ada <contact@maidcoin.org>",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^5.0.0",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.2",
    "hardhat": "^2.4.0",
    "hardhat-deploy": "^0.8.11",
    "hardhat-typechain": "^0.3.5",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.3",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.0.0",
    "typechain": "^4.0.0",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.1.0",
    "ethereumjs-util": "^7.0.10",
    "skyutil": "^0.0.5",
    "sol-merger": "^3.1.0"
  }
}
